{
  "base": {
    "style": {
      "backgroundColor": "var(--kcButton-DefaultBackground)",
      "borderColor": "var(--kcButton-DefaultBorder)",
      "borderStyle": "solid",
      "borderWidth": "1px",
      "color": "var(--kcButton-DefaultColor)",
      "fontSize": ".8em",
      "margin": "2px",
      "outlineStyle": "none",
      "padding": "5px 15px",
      "textAlign": "center"
    }
  },
  "variants": [
    {
      "pseudo": "focus",
      "style": {
        "boxShadow": "0px 0px 5px #44444488 !important"
      }
    },
    {
      "pseudo": "hover",
      "style": {
        "boxShadow": "0px 0px 5px #44444488 !important"
      }
    },
    {
      "pseudo": "disabled",
      "style": {
        "backgroundColor": "var(--kcButton-DisabledBackground)",
        "borderColor": "var(--kcButton-DisabledBorder)",
        "boxShadow": "none !important",
        "color": "var(--kcButton-DisabledColor)"
      }
    }
  ]
}